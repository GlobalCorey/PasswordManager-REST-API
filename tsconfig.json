{
    "compilerOptions": {
        "lib": ["es2020"],
        "module": "commonjs",
        "target": "es2020",
        
        "outDir": "./dist",
        "allowJs": true,
        "removeComments": true,
        "sourceMap": true,
        "noImplicitAny": true
    },
    "extends": "@tsconfig/node14/tsconfig.json",
    "include": [
        "./src/**/*"
    ],
    "exclude":[
        "node_modules"
    ],
    "watchOptions": {
        "watchFile": "useFsEvents",
        "watchDirectory": "useFsEvents",
        "excludeDirectories": ["**/node_modules", "dist"]
    }
}